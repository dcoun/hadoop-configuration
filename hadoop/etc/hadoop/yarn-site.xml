<configuration>
	<property>
		<name>yarn.resourcemanager.address</name>
		<value>localhost:8032</value>
	</property>

	<property>
		<name>yarn.nodemanager.local-dirs</name>
		<value>/Users/Shared/hadoop/yarn/nm</value>
		<description>Multiple paths help spread disk i/o.</description>
	</property>

  <property>
		<name>yarn.nodemanager.log-dirs</name>
		<value>/Users/Shared/hadoop/logs/nm</value>
		<description>Multiple paths help spread disk i/o.</description>
	</property>

  <property>
		<name>yarn.nodemanager.remote-app-log-dir</name>
		<value>/Users/Shared/hadoop/logs/nm</value>
		<description>
      HDFS directory where the application logs are moved on application completion.
		  Need to set appropriate permissions.
		  Only applicable if log-aggregation is enabled.
    </description>
	</property>

  <property>
    <name>yarn.nodemanager.aux-services</name>
    <value>spark_shuffle,mapreduce_shuffle</value>
    <!-- <value>mapreduce_shuffle</value> -->
  </property>
  
  <property>
    <name>yarn.nodemanager.aux-services.spark_shuffle.class</name>
    <value>org.apache.spark.network.yarn.YarnShuffleService</value>
  </property>

  <property>
	<name>yarn.nodemanager.aux-services.mapreduce.shuffle.class</name>
	<!-- <value>org.apache.spark.network.yarn.YarnShuffleService</value> -->
	<value>org.apache.hadoop.mapred.ShuffleHandler</value>
  </property>

